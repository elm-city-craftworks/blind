#!/usr/bin/env ruby

require 'ray'
require_relative "../lib/blind/game"

Ray.game "Blind" do
  register { add_hook :quit, method(:exit!) }

  scene :main do
    self.frames_per_second = 10

    @horn = sound("#{File.dirname(__FILE__)}/../data/horn.wav")
    @horn.play
    @horn.looping = true
    @horn.volume = 0

    @game = Blind::Game.new
    @game.on_event(:out_of_bounds) do
      @horn.stop
      blast = sound("#{File.dirname(__FILE__)}/../data/grenade.wav")
      blast.play
      sleep blast.duration

      exit! 
    end

    render do |win|
      win.draw text("Player position #{@game.player_position}; risk #{@game.escape_risk(20)}")
    end

    always do
      @horn.volume = @game.escape_risk(20) * 100

      @game.move_player(0,-0.1) if holding?(:w) 
      @game.move_player(0,0.1)  if holding?(:s)
      @game.move_player(-0.1,0) if holding?(:a)
      @game.move_player(0.1,0)  if holding?(:d)
    end
  end

  scenes << :main
end

